<!DOCTYPE html>
<html>
<head>
  <title>CSA</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body id="<%= params[:controller].parameterize %>_controller">

  <div id="page-wrap">

    <div id ="user">
      <!-- Blank URI so browser will request current page when form submitted -->
      <%= form_tag '', method: 'GET', class: 'locale' do %>
          <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale), \
                          onchange: 'this.form.submit()' %>
          <%= submit_tag 'Submit', id: 'locale-submit' %>
      <% end %>
      <br>
      <%= render :partial => 'sessions/login' %>
    </div>

    <div id="header">
      <h1>CSA</h1>

      <div id="navigation">
        <%= render_navigation %>
      </div>

      <% flash.each do |key, value| %>
            <span class="flash_<%= key %>">
              <span class="flash_message"><%= value %></span>
            </span>
      <% end %>
    </div>

    <div id="content" class="center">
      <%= yield %>
    </div>

    <div id="instant_messages_table">
      <% broadcasts = Broadcast.all %>
      <% if broadcasts.length > 0 %>
          <% broadcasts.take(20).each do |broadcast| %>
              <%= broadcast.created_at.to_s(:time) %> <%= broadcast.user.firstname %>:<br><%= broadcast.content %><br>
          <% end %>
      <% end %>
    </div>

    <div id="footer">
    </div>
  </div>

  <div id="sidebar">

  </div>
</body>
</html>
